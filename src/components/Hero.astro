---
const { tekst, img } = Astro.props;
---

<section class="hero">
  <div class="hero-container">
    <img src={img} alt="Hero image" class="heroimg">
    <p class="hero-text">{tekst}</p>
  </div>
</section>

<style>
    .hero {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  width: 100%;
  max-width: 1400px; /* Adjust as needed */
}

.hero-container {
  position: relative;
  width: 100%;
}

.heroimg {
  width: 100%;
  height: auto;
  display: block;
  border-radius: 10px;
}

.hero-text {
  position: absolute;
  top: 80%; /* Moves text to the middle */
  left: 50%; /* Moves text to the middle */
  transform: translate(-50%, -50%); /* Centers the text */
  color: white;
  font-size: 3rem;
  font-weight: bold;
  text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5); /* Adds text shadow for better visibility */
  text-align: center;
  width: 90%;
}

@media (max-width: 900px) {
  .hero-text {
  position: absolute;
  top: 80%; /* Moves text to the middle */
  left: 50%; /* Moves text to the middle */
  transform: translate(-50%, -50%); /* Centers the text */
  color: white;
  font-size: 1.2rem;
  font-weight: bold;
  text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5); /* Adds text shadow for better visibility */
  text-align: center;
  width: 90%;
}
}

</style>