---
const nightEvents = [
  { time: "20.00", event: "Teaterperformance", place: "Byens Teater" },
  { time: "20.30", event: "Museumsrundvisning", place: "Museet" },
  { time: "21.00", event: "Debat", place: "Hovedscenen" },
  { time: "21.30", event: "Workshop", place: "Kulturhuset" },
  { time: "22.00", event: "Udstilling", place: "Udstillingshuset" },
  { time: "22.30", event: "Nattevandring", place: "Kronborg" },
  { time: "23.00", event: "Smag på verden", place: "Værftet" },
  { time: "23.30", event: "Silent Disco", place: "Torvet" },
  { time: "00.00", event: "Fyrværkeri", place: "Havnen" },
  { time: "00.30", event: "After Party", place: "Diskotek H" },
];

const dayEvents = [
  { time: "15.00", event: "Ballonuddeling", place: "Bycentret" },
  { time: "15.30", event: "Talk m. forfatter", place: "Bog og idé" },
  { time: "16.00", event: "Korkoncert", place: "Koncerthuset" },
  { time: "16.30", event: "Pop-up-koncert", place: "Butik" },
  { time: "17.00", event: "Ansigtsmaling", place: "Gågaden" },
  { time: "17.30", event: "Vinsmagning", place: "Vinhandlen" },
  { time: "18.00", event: "Mød FC Helsingør", place: "Torvet" },
  { time: "18.30", event: "Byvandring", place: "Hele byen" },
  { time: "19.00", event: "Koncert", place: "Spillested" },
  { time: "19.30", event: "Teaterperformance", place: "Bycentret" },
];
---

<div class="schedule-grid">
  <div
    class="schedule-container"
    style="background-image: url('/img/tidsplan-01.svg')"
  >
    <div class="schedule-header">
      <img src="/img/tidsplan-03.svg" alt="Kulturnat Logo" class="logo" />
      <span class="date">26. september</span>
    </div>
    <table class="schedule-table">
      <thead>
        <tr>
          <th>TID</th>
          <th>EVENT</th>
          <th>STED</th>
        </tr>
      </thead>
      <tbody>
        {
          dayEvents.map((event) => (
            <tr>
              <td>{event.time}</td>
              <td>{event.event}</td>
              <td>{event.place}</td>
            </tr>
          ))
        }
      </tbody>
    </table>
  </div>

  <div
    class="schedule-container"
    style="background-image: url('/img/tidsplan-02.svg')"
  >
    <div class="schedule-header">
      <img src="/img/tidsplan-03.svg" alt="Kulturnat Logo" class="logo" />
      <span class="date">26. september</span>
    </div>
    <table class="schedule-table">
      <thead>
        <tr>
          <th>TID</th>
          <th>EVENT</th>
          <th>STED</th>
        </tr>
      </thead>
      <tbody>
        {
          nightEvents.map((event) => (
            <tr>
              <td>{event.time}</td>
              <td>{event.event}</td>
              <td>{event.place}</td>
            </tr>
          ))
        }
      </tbody>
    </table>
  </div>
</div>

<style>
  .schedule-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 15px;
    justify-content: center;
    padding: 20px;
    justify-items: center;
  }

  .schedule-container {
    border-radius: 12px;
    padding: 20px;
    max-width: 450px;
    color: black;
    font-family: sans-serif;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    transition: transform 0.3s ease-in-out;
  }

  .schedule-container:hover {
    transform: scale(1.05);
  }

  .schedule-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
  }

  .logo {
    height: 60px;
  }

  .date {
    font-size: 1.2rem;
    font-weight: bold;
  }

  .schedule-table {
    width: 100%;
    border-collapse: collapse;
    border-radius: 10px;
    overflow: hidden;
  }

  .schedule-table th,
  .schedule-table td {
    padding: 10px;
    border-bottom: 1px solid hsl(0, 4%, 5%);
  }

  .schedule-table th {
    font-size: 1rem;
    text-align: left;
    font-weight: bold;
  }

  .schedule-table tbody tr:last-child td {
    border-bottom: none;
  }

  @media (max-width: 900px) {
    .schedule-grid {
      grid-template-columns: 1fr; /* Stacks the events when screen is smaller */
    }
  }
</style>
