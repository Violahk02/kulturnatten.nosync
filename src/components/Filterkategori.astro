---
const {overskrift, kategori, kategori2, kategori3, kategori4, kategori5, kategori6} = Astro.props;
---

<details>
    <summary class="filter_header">{overskrift}</summary>
    <div class="filter_container">
        <label class="filter">
            <input type="checkbox">
            <span class="color-box" style="background-color: #FDE4A6;"></span>
            {kategori}
        </label>
        <label class="filter">
            <input type="checkbox">
            <span class="color-box" style="background-color: #F89A4F;"></span>
            {kategori2}
        </label>
        
        <label class="filter">
            <input type="checkbox">
            <span class="color-box" style="background-color: #D45E6A;"></span>
            {kategori3}
        </label>
        
        <label class="filter">
            <input type="checkbox">
            <span class="color-box" style="background-color: #F9E7F0;"></span>
            {kategori4}
        </label>
        
        <label class="filter">
            <input type="checkbox">
            <span class="color-box" style="background-color: #DEE3F9;"></span>
            {kategori5}
        </label>
        
        <label class="filter">
            <input type="checkbox">
            <span class="color-box" style="background-color: #B5D9B2;"></span>
            {kategori6}
        </label>
    </div>
    
</details>

<style>
    .filter_header{
        font-size: 1.5rem;
        font-family: Futura;
        font-weight: medium;
        width: 300px;
        background-color: white;
        padding: 10px;
        border-radius: 100px;
    }

    .filter_container {
    position: absolute;
    left: 5%;
    display: flex;
    flex-direction: column;
    gap: 10px;
    background-color: white;
    padding: 10px;
    width: 250px;
    border-radius: 0 0 20px 20px;
}

.filter{
        font-size: 1.5rem;
        font-family: Afacad;
        font-weight: 100;
    }

   /* Skjuler standard checkbox */
.filter input {
    display: none;
    
}

/* Style til farvede bokse */
.color-box {
    display: inline-block;
    width: 20px;
    height: 20px;
    border: 2px solid black;
    border-radius: 4px;
    margin-right: 10px;
    position: relative;
}

</style>




