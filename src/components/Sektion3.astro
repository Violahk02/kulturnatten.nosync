<style>
  .insta_section {
    display: grid;
    grid-column: 1/2;
    grid-row: 1/2;
    margin-top: -8%;
  }

  .insta_container {
    display: grid;
    grid-column: 1/2;
    grid-row: 1/2;
  }

  .insta {
    place-self: center;
    margin-top: -10%;
  }

  img {
    width: 100%;

    object-fit: cover;
    grid-column: 1/2;
    grid-row: 1/2;
  }

  .pil {
    width: 4%;
    place-self: end center;
    margin-bottom: 6%;
